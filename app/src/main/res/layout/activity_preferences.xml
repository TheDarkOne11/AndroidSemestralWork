<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/checkWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:onClick="onWifiCheckClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wifiCheckHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wifiCheckHeading"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wifiCheckText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wifiCheckText"
                android:textSize="12sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/isWifiCheckRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>